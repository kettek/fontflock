  @menu
    div.Titlebar__Controls__Button -- a button
div.Main
  div.Main__Left
    div.SystemFonts
      header.SystemFonts__Header -- System/Installed
      div.SystemFonts__Entries
        for|fontStoreName, fontStore| in=state.systemFontStores
          div.SystemFonts__Entries__Item
            div.SystemFonts__Entries__Item__Header -- ${fontStoreName}
    div.Libraries
      div.Libraries__Header -- Libraries
      div.Libraries__Entries
        div.Libraries__Entries__Item
          div.Libraries__Entries__Item__Header -- 2020
        div.Libraries__Entries__Item
          div.Libraries__Entries__Item__Header -- 2018
    div.Collections
      div.Collections__Header -- Collections
      div.Collections__Entries
        div.Collections__Entries__Item
          div.Collections__Entries__Item__Header -- Pixel Fonts
        div.Collections__Entries__Item
          div.Collections__Entries__Item__Header -- Webbie
  div.Main__Right
    div.FontSettings
      input value=state.text on-input('setText')
      input style='width:3em' type='number' value=state.fontSize on-input('setSize')
      select on-change('setUnits')
        option value='pt' selected=state.fontSizeUnits=='pt' -- pt
        option value='px' selected=state.fontSizeUnits=='px' -- px
    div.Fonts
      table.Fonts__Table
        tbody
          tr class='Fonts__Header'
            th -- Example Text
            th -- Info
            th -- Controls
          for|fontStorePath, fontStore| in=state.systemFontStores
            for|fontFamilyName, fontFamily| in=fontStore
              tr class='Fonts__FamilyName'
                th -- ${fontFamilyName}
              for|fontEntry, fontIndex| of=fontFamily.entries
                tr.FontGroup__Entry key=fontIndex
                  td.FontGroup__Entry__Example style={
                    'font-family': fontFamilyName,
                    'font-size': state.fontSize+state.fontSizeUnits,
                    'font-weight': fontEntry.weight+'',
                    'font-style': fontEntry.italic?'italic':'',
                  }
                    div style={overflow: 'auto'} -- ${state.text}
                  td.FontGroup__Entry__Properties
                    table
                      tbody
                        tr
                          td -- ${fontEntry.weight}
                          td -- ${fontEntry.italic?'i':''}
                  td.FontGroup__Entry__Controls
                    button on-click('revealFont', fontEntry.path) -- reveal
